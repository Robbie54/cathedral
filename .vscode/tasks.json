{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Build Main",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--target",
                "Main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "CMake: Build Mint",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--target",
                "Mint"
            ],
            "group": {
                "kind": "build"
            }
        }
    ]
}
